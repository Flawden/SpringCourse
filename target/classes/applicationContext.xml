<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="HipHopBean"
          class="ru.flawden.springcourse.Music.HipHopMusic">
    </bean>
    <bean id="RockBean"
          class="ru.flawden.springcourse.Music.RockMusic">
    </bean>
    <bean id="ClassicalBean"
          class="ru.flawden.springcourse.Music.ClassicalMusic">
    </bean>
    <bean id="MusicPlayer"
        class="ru.flawden.springcourse.MusicPlayer">
        <property name="music">
            <list>
                <ref bean="HipHopBean"/>
                <ref bean="RockBean"/>
                <ref bean="ClassicalBean"/>
            </list>
        </property>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>